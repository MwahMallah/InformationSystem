<?xml version="1.0" encoding="utf-8"?>

<views:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:student="using:InformationSystem.App.ViewModels.Student"
             xmlns:views="using:InformationSystem.App.Views"
             x:Class="InformationSystem.App.Views.Student.StudentEditView"
             x:DataType="student:StudentEditViewModel">
    <ContentPage.Content>
        <VerticalStackLayout Margin="10">
            <Label Text="First Name" FontSize="20"></Label>
            <Entry HorizontalOptions="Fill" Text="{Binding Student.FirstName}"></Entry>
            <Label Text="Last Name" FontSize="20"></Label>
            <Entry HorizontalOptions="Fill" Text="{Binding Student.LastName}"></Entry>
            <Label Text="Group" FontSize="20"></Label>
            <Entry HorizontalOptions="Fill" Text="{Binding Student.Group}"></Entry>
            <Label Text="Current Year" FontSize="20"></Label>
            <Entry HorizontalOptions="Fill" Text="{Binding Student.CurrentYear}"></Entry>
            <Button HorizontalOptions="Fill" 
                    Text="Save" 
                    BackgroundColor="Green"
                    Command="{Binding SaveCommand}"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</views:BaseView>