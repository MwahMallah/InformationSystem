<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:InformationSystem.App"
       xmlns:student="using:InformationSystem.App.Views.Student"
       xmlns:activity="using:InformationSystem.App.Views.Activity"
       xmlns:course="using:InformationSystem.App.Views.Course"
       x:Class="InformationSystem.App.AppShell"
       Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Students" Style="{StaticResource SelectedTabStyle}">
            <ShellContent Route="students" ContentTemplate="{DataTemplate student:StudentListView}"/>
        </Tab>
        <Tab Title="Courses" Style="{StaticResource DefaultTabStyle}">
            <ShellContent Route="courses" ContentTemplate="{DataTemplate course:CourseListView}"/>
        </Tab>
        <Tab Title="Activities" Style="{StaticResource DefaultTabStyle}">
            <ShellContent Route="activities" ContentTemplate="{DataTemplate activity:ActivityListView}"/>
        </Tab>
    </TabBar>
</Shell>